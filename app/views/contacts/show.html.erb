<%- model_class = @contact.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<div class="well">
	<p>
		<strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
		<%= @contact.name %>
	</p>
	<p>
		<strong><%= model_class.human_attribute_name(:email) %>:</strong><br>
		<%= @contact.email %>
	</p>
	<p>
		<strong><%= model_class.human_attribute_name(:subject) %>:</strong><br>
		<%= @contact.subject %>
	</p>
	<p>
		<strong><%= model_class.human_attribute_name(:message) %>:</strong><br>
		<%= @contact.message %>
	</p>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
